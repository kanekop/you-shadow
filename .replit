entrypoint = "app.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "gunicorn -b 0.0.0.0:443 app:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 443
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
